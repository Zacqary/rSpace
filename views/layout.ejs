		<script type="text/javascript">
			$(function(){
				$('.col').jScrollPane({autoReinitialise: true}).hover(function () {
					$(this).find('.jspDrag').stop().fadeTo('fast', 1);
				},function() {
					var thisCol = $(this);
					var me = $(this).find('.jspDrag');
					if (!me.hasClass('jspActive'))
						me.stop().fadeTo(400, 0);
					else $(document).bind("mouseup", function(){
						$(document).unbind("mouseup");
						if (!thisCol.is(":hover"))
							me.stop().fadeTo('fast', 0);
					})
				});
				
				$("body").mousewheel(function(e,d){
					var hovering = false;
					$('.col').each(function(){
						if ($(this).is(":hover") ) hovering = true;
					})
					if (!hovering){
						$('.col').each(function(){
							var api = $(this).data('jsp');
							api.scrollByY(-d);
						})
					}
					
				})
				$('body').mousedown(function(e){if(e.button==1)return false});
				// $('.editable').each(function(){
