// 						}
// 					});
// 				})
				
				$('div[contenteditable]').keydown(function(e) {
				    if(e.keyCode === 117){
						document.execCommand('bold',false);
				    	return false;
				    }
				  });
				
				function resizeCols(){
					var colheight = ($(window).height() - $("#main-footer").height() - $("#navbar").height()) * 100 / $(window).height();
					$(".col").css("height",colheight+"vh");
				}
				resizeCols();
				$(window).resize(resizeCols);
				

			});
		</script>
